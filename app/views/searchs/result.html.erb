<div class="oocontainer">
 <div class="row">
  <div style="word-break: break-all;">
   <%= form_with url: search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word, size: "50", class: 'form-control-sm' %>
    <%= f.select :range, options_for_select([['質問タイトル'],['会員'],['ジャンル']]) %>
    <%= f.hidden_field :search, :value => "partial_match" %>
    <%= f.submit "検索", class: "btn btn-primary btn-lg", data: {"turbolinks"=>false} %>
   <% end %>
  <table class="table table-hover table-inverse" frame="border" >
  <!--検索対象モデルが会員の時 -->
    <% if @range == "会員" %>
     <tbody>
      <tr>
       <b>"<%= @oomember %>"の会員検索結果表示</b>
      </tr>
      <tr bgcolor=#66FFCC>
       <th>会員id</th>
       <th>登録会員名</th>
       <th colspan="3"></th>
      </tr>
      <% @members.each do |member| %>
        <tr bgcolor=#EEEEEE>
          <td><%= member.id %></td>
          <td><%= link_to member.name, public_member_path(member) %></td>
          <td><%= attachment_image_tag member, :profileimage, :fill, 60, 60, fallback: "no_image.jpg" %></td>
        </tr>
      <% end %>
      <%= paginate @members %>
     </tbody>
   <!--検索対象モデルがジャンルの時 -->
   <% elsif @range == "ジャンル" %>
     <tbody>
      <tr>
       <b>"<%= @oogenre %>"のジャンル検索結果表示</b>
      </tr>
      <tr bgcolor=#66FFCC>
       <th>ジャンル名</th>
       <th>質問タイトル</th>
       <th>投稿id</th>
       <th>質問者情報</th>
       <th>回答更新日時</th>
       <th>回答数</th>
       <th colspan="6"></th>
      </tr>
       <% @posts.each do |post| %>
         <tr bgcolor=#EEEEEE>
          <td><%= post.genre.name %></td>
          <td><%= link_to post.posttitle, public_post_path(post) %></td>
          <td><%= post.id %></td>
          <td>
           <%= link_to post.member.name, public_member_path(post.member) %>
           <%= attachment_image_tag post.member, :profileimage, :fill, 40, 40, fallback: "no_image.jpg" %>
          </td>
          <td><%= post.updated_at.to_s(:datetime_jp) %></td>
          <td><%= post.answers.count %></td>
          <% if member_signed_in? %>
           <% if post.member.id == current_member.id %>
            <td><%= link_to '編集する', edit_public_post_path(post), class: 'btn btn-success', data: {"turbolinks"=>false} %>
                <%= link_to '削除する', public_post_path(post), method: :delete, class: 'btn btn-danger', data: { confirm: "本当に削除しますか？" }%>
            </td>
           <% else %>
            <td><%= "" %></td>
           <% end %>
           <% else %>
            <td><%= "" %></td>
          <% end %>
         </tr>
        <% end %>
      <%= paginate @posts %>
     </tbody>
  <% else %>
    <!--検索対象モデルが質問タイトルの時 -->
     <tbody>
      <tr>
       <b>"<%= @oopost %>"の質問タイトル検索結果を表示</b>
      </tr>
      <tr bgcolor=#66FFCC>
       <th>投稿No</th>
       <th>質問タイトル</th>
       <th>質問者</th>
       <th>更新日時</th>
       <th>回答数</th>
       <th>ジャンル名</th>
       <th colspan="4"></th>
      </tr>
      <% @posts.each do |post| %>
      <tr bgcolor=#EEEEEE>
       <td><%= post.id %></td>
       <td><%= link_to post.posttitle, public_post_path(post) %></td>
       <td>
         <%= link_to post.member.name, public_member_path(post.member) %>
         <%= attachment_image_tag post.member, :profileimage, :fill, 40, 40, fallback: "no_image.jpg" %>
       </td>
       <td><%= post.updated_at.to_s(:datetime_jp) %></td>
       <td><%= post.answers.count %></td>
       <td><%= post.genre.name %></td>
        <% if member_signed_in? %>
         <% if post.member.id == current_member.id %>
          <td><%= link_to '編集する', edit_public_post_path(post), class: 'btn btn-success', data: {"turbolinks"=>false} %>
              <%= link_to '削除する', public_post_path(post), method: :delete, class: 'btn btn-danger', data: { confirm: "本当に削除しますか？" }%>
          </td>
         <% else %>
          <td><%= "" %></td>
         <% end %>
         <% else %>
          <td><%= "" %></td>
        <% end %>
       </tr>
       <% end %>
     </tbody>
    <%= paginate @posts %>
  <% end %>
  </table>
  </div>
 </div>
</div>