       </div>
      </ul>
    <% end %>
  </div>
  <div class="search">
   <%= form_with url: search_path, local: true, method: :get do |f| %>
    <%= f.select :range, options_for_select([['質問タイトル'],['会員'],['ジャンル']]) %>
    <%= f.text_field :word, size: "75x30", class: 'form-control-sm', :placeholder => "検索内容入力" %>
    <%= f.hidden_field :search, :value => "partial_match" %>
    <%= f.submit "検索", size: "15x30", class: "btn btn-outline-primary", data: {"turbolinks"=>false} %>
   <% end %>
