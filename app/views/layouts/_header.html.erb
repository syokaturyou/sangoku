       </div>
      </ul>
    <% elsif admin_signed_in? %>
      <a data-toggle="dropdown" ><label for="label1" class="fas fa-bars fa-3x"></label></a>
      <ul class="dropdown-menu">
       <div class="box-color">
        <li><div class="header-nav__header-box"><%= link_to 'トップページ', root_path, class: "fas fa-home nav-link" %></div></li>
        <li><div class="header-nav__header-box"><%= link_to '雑談部屋', zatudans_path, class: 'fas fa-comment-dots nav-link' %></div></li>
