<h2>会員ログイン</h2>
 <div class ="login">
    <%= form_for(resource, as: resource_name, url: member_session_path) do |f| %>
    <table class="logtable">
     <tr>
      <td><%= f.label :メールアドレス %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', size: "60" %></td>
     </tr>
     <tr>
      <td><%= f.label :パスワード %></td>
      <td><%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %></th>
     </tr>
     <tr>
      <td><%= f.submit "ログイン", class: 'btn btn-primary btn-lg' %></td>
     </tr>
     <tr>
      <td><%= link_to "新規会員登録へ", new_registration_path(resource_name), class: 'btn btn-success btn-lg' %></td>
      <td>会員登録がお済みでない方</td>
     </tr>
    </table>
    <% end %>

</div>