<div class="container">
 <div class="row">
  <div class="col-lg-12">
   <h2>ジャンル一覧・追加</h2>
　</div>
 </div>

 <div class="row">
  <div class="col-lg-1"></div>
   <div class="col-lg-12">
    <%= form_with model:@genre,url: manager_genres_path, local:true do |f| %>
     <div style = "display:flex">
       ジャンル名<%= f.text_field :name %>
                 <%= f.submit '新規登録', class: 'btn btn-success' %>
     </div>
    <% end %>
    </div>
   </div>
  </div>

　<div class="row">
   <div class="col-lg-2"></div>
    <div class="col-lg-6">
     <table class="table table-hover table-inverse">
      <thead>
       <tr bgcolor=#BBBBBB>
        <th>ジャンル</th>
        <th></th>
        <th></th>
       </tr>
      </thead>
       <% @genres.each do |genre| %>
        <tr>
         <th><%= genre.name %></th>
         <th><%= link_to '編集する', edit_manager_genre_path(genre.id), class: 'btn btn-success' %></th>
         <th><%= link_to '削除する', manager_genre_path(genre.id), method: :delete, class: 'btn btn-danger', data: { confirm: "本当に削除しますか？" } %></th>
        </tr>
       <% end %>
      </table>
    </div>
  </div>
</div>