<h2>お問い合わせ内容入力画面</h2>
<div class ="center">
 <div class ="bottom">

   <% if @contract.errors.any? %>
  メッセージは必須です。
  <% end %>

<%= form_with model: @contract, url: contracts_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, 'お名前' %>
    <%= f.text_field :name, autofocus: true, class: 'form-control', size: "60" %>
  </div>

  <div class="form-group">
    <%= f.label :email, '返信先メールアドレス' %>
    <%= f.text_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, '電話番号' %>
    <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :message, 'メッセージ(必須)' %>
    <%= f.text_area :message, class: 'form-control', size: '5x5' %>
  </div>

  <div>
    <%= f.submit '送信する', class: 'btn btn-success' %>
  </div>
<% end %>

 </div>
</div>