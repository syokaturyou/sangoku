<h1>本検索</h1>

<%= form_with url: book_search_path, method: :get, local: true do |f| %>
 <%= f.select :range, options_for_select([['キーワード'],['著者']]) %>
  <%= f.text_field :keyword, required: true, size: "40x20", :placeholder => "検索内容入力" %>
  <%= f.submit '楽天ブックスで検索', class: "btn btn-danger", data: {"turbolinks"=>false} %>
  <% if @books.present? %>
   <%= render 'books/book' %>
  <% end %>
<% end %>
