<div class='container'>
  <div class="row">
    <table class="table table-borderless">
     <div class="col-lg-6">
      <h2>質問編集</h2>
     </div>
      <tbody>
       <%= form_with model: @post, url: public_post_path(@post), local: true do |f| %>
        <tr>
         <td><%= f.label :質問タイトル変更 %></td>
         <td><%= f.text_field :posttitle, autofocus: true, required: true, size: "50" %></td>
        </tr>
        <tr>
         <td><%= f.label :説明文変更 %></td>
         <td><%= f.text_area :postbody, autofocus: true, required: true, size: '80x10' %></td>
        </tr>
        <tr>
         <td><%= f.label :出典・参考url変更 %></td>
         <td><%= f.text_field :postsyutten, autofocus: true, size: "50" %></td>
        </tr>
        <tr>
         <td><%= f.label :ジャンル名入力 %></td>
         <td><%= f.collection_select :genre_id, Genre.all, :id, :name, required: true %></td>
        </tr>
        <tr>
         <td><%= f.label :参考画像 %></td>
         <td><%= attachment_image_tag @post, :postimage, :fill, 90, 90, fallback: "no_image.jpg" %>
          <label><%= check_box_tag :image_delete %>画像なし</label>
          <label><%= f.attachment_field :postimage %></label>
         </td>
        </tr>
        <tr>
        <td><%= f.submit "変更を保存する", class: 'btn btn-success' %></td>
        <% end %>
        </tr>
       </tbody>
     </table>
   </div>
  </div>