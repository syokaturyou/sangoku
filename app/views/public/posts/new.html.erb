<div class='container'>
  <div class="row">
    <div class="col-lg-6">
      <h2>新規質問投稿</h2>
    </div>
    <table class="table table-borderless">
      <tbody>
       <%= form_with model: @newpost, url: public_posts_path, local: true do |f| %>
        <tr>
         <td><%= f.label :質問タイトル入力 %></td>
         <td><%= f.text_field :posttitle, autofocus: true, required: true %></td>
        </tr>
        <tr>
         <td><%= f.label :説明文入力 %></td>
         <td><%= f.text_area :postbody, autofocus: true, required: true %></td>
        </tr>
        <tr>
         <td><%= f.label :出典・参考url入力 %></td>
         <td><%= f.text_field :postsyutten, autofocus: true %></td>
        </tr>
        <tr>
         <td><%= f.label :参考画像 %></td>
         <td><%= f.attachment_field :postimage %></td>
        </tr>
        <tr>
         <td><%= f.submit "質問を投稿する", class: 'btn btn-success' %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
   </div>
  </div>