<div class="oocontainer">
  <div class="row">
    <div class="col-lg-3">
      <h2>会員一覧</h2>
    </div>

    <div class="col-lg-7">
     <%= paginate @members %>
    </div>

    <table class="table table-hover table-inverse" frame="border">
     <thead>
      <tr bgcolor=#66FFCC>
        <th>会員No </th>
        <th>登録名 </th>
        <th>ステータス</th>
        <th></th>
      </tr>
     <thead>
     <tbody>
      <% @members.each do |member| %>
       <tr bgcolor=#EEEEEE>
        <td><%= member.id %></td>
        <td><%= link_to member.name, public_member_path(member) %></td>
        <td><%= attachment_image_tag member, :profileimage, :fill, 60, 60, fallback: "no_image.jpg" %></td>
        <td>
         <% if member.is_deleted == true %><font color="gray">退会</font>
         <% elsif member.is_deleted == false %><font color="green">有効</font>
         <% else %>
         <% end %>
        </td>
       </tr>
      <% end %>
      </td></td>
     </tbody>
    </table>
</div>