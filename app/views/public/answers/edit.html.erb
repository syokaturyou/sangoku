<h4>回答更新</h4>
  <div class ="center">
    <div class ="bottom">
      <%= form_with model: @answer, url: public_answer_path, local: true do |f| %>
    <table>
    <tr>
    <div class="field">
     <th><%= f.label :回答本文更新 %></th>
     <th><%= f.text_field :answerbody, autofocus: true, required: true %></th>
    </div>
    </tr>

    <tr>
    <div class="field">
     <th><%= f.label :出典・参考url更新 %></th>
     <th><%= f.text_field :answersyutten, autofocus: true, required: true %></th>
    </div>
    </tr>

    <tr>
    <div class="field">
     <th><%= f.label :参考画像 %></th>
     <th><%= f.file_field :answerimage, autofocus: true %></th>
    </div>
    </tr>

    </table>

    <br></br>
    <div class="actions">
    <%= f.submit "回答を更新する", class: 'btn btn-success' %>
    </div>
    <% end %>

   </div>
  </div>