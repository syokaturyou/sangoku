<h4>新規回答投稿</h4>
  <div class ="center">
    <div class ="bottom">
      <%= form_with model: @newanswer, url: public_post_answers_path, local: true do |f| %>
    <table>
    <tr>
    <div class="field">
     <th><%= f.label :回答本文入力 %></th>
     <th><%= f.text_field :answerbody, autofocus: true, required: true %></th>
    </div>
    </tr>

    <tr>
    <div class="field">
     <th><%= f.label :出典・参考url入力 %></th>
     <th><%= f.text_field :answersyutten, autofocus: true, required: true %></th>
    </div>
    </tr>

    <%= f.hidden_field :post_id, :value => params[:post_id] %>

    <tr>
    <div class="field">
     <th><%= f.label :参考画像 %></th>
     <th><%= f.file_field :answerimage, autofocus: true %></th>
    </div>
    </tr>

    </table>

    <br></br>
    <div class="actions">
    <%= f.submit "回答を投稿する", class: 'btn btn-success' %>
    </div>
    <% end %>

   </div>
  </div>